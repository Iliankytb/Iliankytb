-- Créer un nouvel écran GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "CustomGUI"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Créer un Frame principal
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = ScreenGui

-- Ajouter un titre
local Title = Instance.new("TextLabel")
Title.Text = "Custom Script GUI"
Title.Size = UDim2.new(1, 0, 0, 50)
Title.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 24
Title.Parent = MainFrame

-- Créer des boutons pour des options (ex: Speed Boost)
local SpeedBoostButton = Instance.new("TextButton")
SpeedBoostButton.Text = "Speed Boost"
SpeedBoostButton.Size = UDim2.new(0, 200, 0, 50)
SpeedBoostButton.Position = UDim2.new(0, 100, 0, 60)
SpeedBoostButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
SpeedBoostButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SpeedBoostButton.Font = Enum.Font.SourceSans
SpeedBoostButton.TextSize = 18
SpeedBoostButton.Parent = MainFrame

-- Ajout d’un comportement de boost de vitesse
local speedBoostActive = false
SpeedBoostButton.MouseButton1Click:Connect(function()
    local player = game.Players.LocalPlayer
    local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
    
    if humanoid then
        if speedBoostActive then
            humanoid.WalkSpeed = 16 -- Revenir à la vitesse normale
            SpeedBoostButton.Text = "Speed Boost"
        else
            humanoid.WalkSpeed = 50 -- Activer le boost de vitesse
            SpeedBoostButton.Text = "Disable Speed Boost"
        end
        speedBoostActive = not speedBoostActive
    end
end)

-- Créer un bouton pour voler (Fly)
local FlyButton = Instance.new("TextButton")
FlyButton.Text = "Fly"
FlyButton.Size = UDim2.new(0, 200, 0, 50)
FlyButton.Position = UDim2.new(0, 100, 0, 120)
FlyButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
FlyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
FlyButton.Font = Enum.Font.SourceSans
FlyButton.TextSize = 18
FlyButton.Parent = MainFrame

-- Ajouter comportement de vol (Fly)
local flying = false
FlyButton.MouseButton1Click:Connect(function()
    local player = game.Players.LocalPlayer
    local humanoid = player.Character:FindFirstChildOfClass("Humanoid")
    
    if humanoid then
        if flying then
            humanoid.PlatformStand = false -- Désactiver le vol
            FlyButton.Text = "Fly"
        else
            humanoid.PlatformStand = true -- Activer le vol
            FlyButton.Text = "Disable Fly"
        end
        flying = not flying
    end
end)

-- Ajout d'un bouton pour quitter le GUI
local ExitButton = Instance.new("TextButton")
ExitButton.Text = "Close"
ExitButton.Size = UDim2.new(0, 100, 0, 30)
ExitButton.Position = UDim2.new(0.5, -50, 1, -40)
ExitButton.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
ExitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ExitButton.Font = Enum.Font.SourceSans
ExitButton.TextSize = 18
ExitButton.Parent = MainFrame

ExitButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)
