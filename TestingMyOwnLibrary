local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Iliankytb/Iliankytb/main/IliankLybrary.lua"))()


local window = library:CreateWindow({
    Title = "Menu Principal",
    Theme = "Dark", -- "Default", "Dark" ou "Light"
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "MonJeuConfig",
        FileName = "MaConfig"
    },
    KeySystem = false -- tu peux l'activer si besoin
})

-- Création d’un onglet
local mainTab = window:CreateTab("Principal")

-- Ajout d’un bouton
mainTab:AddButton({
    Name = "Clique moi",
    Callback = function()
        print("Bouton cliqué !")
    end
})

-- Ajout d’un toggle
mainTab:AddToggle({
    Name = "Mode nuit",
    Flag = "NightMode",
    Default = false,
    Callback = function(state)
        print("Toggle activé:", state)
    end
})

-- Ajout d’un slider
mainTab:AddSlider({
    Name = "Volume",
    Flag = "VolumeLevel",
    Min = 0,
    Max = 100,
    Default = 50,
    Callback = function(value)
        print("Volume:", value)
    end
})

-- Ajout d’un champ de texte
mainTab:AddTextbox({
    Name = "Pseudo",
    Flag = "UserName",
    Default = "Invité",
    Callback = function(text)
        print("Nom d'utilisateur :", text)
    end
})

-- Ajout d’un menu déroulant
mainTab:AddDropdown({
    Name = "Langue",
    Flag = "LangueChoisie",
    Options = {"Français", "Anglais", "Espagnol"},
    Default = "Français",
    Callback = function(choice)
        print("Langue choisie :", choice)
    end
})

-- Sauvegarde manuelle du fichier de config
mainTab:AddButton({
    Name = "Sauvegarder la configuration",
    Callback = function()
        window:SaveConfig()
        print("Configuration sauvegardée !")
    end
})
