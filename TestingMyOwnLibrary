local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Iliankytb/Iliankytb/main/IliankLybrary"))()

-- Création de la fenêtre
local window = library:CreateWindow({
    Title = "Mon Menu",
    Theme = "Dark",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "MyGameConfigs",
        FileName = "Settings"
    },
    KeySystem = false
})

-- Onglet Principal
local tab = window:CreateTab("Principal")

tab:AddButton({
    Name = "Salut",
    Callback = function()
        print("Bonjour le monde !")
    end
})

tab:AddToggle({
    Name = "Mode nuit",
    Default = false,
    Callback = function(state)
        print("Mode nuit =", state)
    end
})

tab:AddSlider({
    Name = "Volume",
    Min = 0,
    Max = 10,
    Default = 5,
    Callback = function(val)
        print("Volume =", val)
    end
})

tab:AddTextbox({
    Name = "Pseudo",
    Placeholder = "Entrez pseudo...",
    Default = "",
    Callback = function(text)
        print("Pseudo :", text)
    end
})

tab:AddDropdown({
    Name = "Langue",
    Options = {"Français", "Anglais", "Espagnol"},
    Default = "Français",
    Callback = function(choice)
        print("Langue :", choice)
    end
})

-- Onglet Réglages
local settingsTab = window:CreateTab("Réglages")
settingsTab:AddButton({
    Name = "Sauvegarder",
    Callback = function()
        window:SaveConfig()
        print("Config sauvegardée !")
    end
})
