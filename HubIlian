-- Variables
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local Key = "IliankYTB"

-- Création du ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HubGui"
screenGui.ResetOnSpawn = false  -- Désactiver le reset sur spawn
screenGui.Parent = playerGui

-- Création de la Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 200) -- Taille de la Frame
frame.Position = UDim2.new(0.5, -100, 0.5, -100) -- Centrée
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Couleur noire
frame.Parent = screenGui

-- Création du premier texte
local titleText = Instance.new("TextLabel")
titleText.Text = "Hub Iliankytb"
titleText.Size = UDim2.new(1, 0, 0, 50)
titleText.Position = UDim2.new(0, 0, 0, 0)
titleText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
titleText.BackgroundTransparency = 1
titleText.TextTransparency = 1 -- Départ avec une transparence de 1
titleText.Parent = frame

-- Animation du texte "Hub Iliankytb"


-- Création du second texte
local loadingText = Instance.new("TextLabel")
loadingText.Text = "Loading Hub..."
loadingText.Size = UDim2.new(1, 0, 0, 50)
loadingText.Position = UDim2.new(0, 0, 0.5, -25) -- Centré verticalement
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
loadingText.BackgroundTransparency = 1
loadingText.TextTransparency = 1 -- Départ avec une transparence de 1
loadingText.Parent = frame

local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30) -- Taille du bouton
closeButton.Position = UDim2.new(1, -40, 0, 10) -- Position en haut à droite
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Couleur de fond rouge
closeButton.Parent = frame

for i = 1, 100 do
    wait(0.01)
    titleText.TextTransparency = titleText.TextTransparency - 0.01
end

-- Animation du texte "Loading Hub..."
for i = 1, 50 do
    wait(0.01)
    loadingText.TextTransparency = loadingText.TextTransparency - 0.002
end

-- Attendre 5 secondes avant de détruire le texte de chargement
wait(5)
loadingText:Destroy()

-- Création du champ de texte pour entrer la clé
local keyInput = Instance.new("TextBox")
keyInput.Size = UDim2.new(1, -20, 0, 50) -- Ajuster la taille
keyInput.Position = UDim2.new(0, 10, 0.3, 0) -- Placer en bas de la Frame
keyInput.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
keyInput.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Couleur de fond gris
keyInput.PlaceholderText = "Enter Key"
keyInput.TextScaled = true
keyInput.Text = ""
keyInput.Parent = frame

-- Création du bouton de validation
local submitButton = Instance.new("TextButton")
submitButton.Size = UDim2.new(1, -20, 0, 50) -- Ajuster la taille
submitButton.Position = UDim2.new(0, 10, 0.6, 0) -- Placer en dessous du champ de texte
submitButton.Text = "Submit"
submitButton.TextScaled = true 
submitButton.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
submitButton.BackgroundColor3 = Color3.fromRGB(0, 128, 0) -- Couleur de fond verte
submitButton.Parent = frame

-- Fonction de validation de la clé
submitButton.MouseButton1Click:Connect(function()
    if keyInput.Text == Key then
        -- La clé est correcte
        print("Key Accepted!")
keyInput:Destroy()
submitButton:Destroy()
for i = 1, 100 do
    wait(0.01)
    frame.Size = UDim2.new(0, 200 + i * 2, 0, 200 + i * 1.25 -- Agrandissement progressif
end
        -- Ajouter ici le code pour ce qui se passe après l'acceptation de la clé
    else
        -- La clé est incorrecte
        print("Invalid Key. Please try again.")
keyInput.Text = "Invalid Key. Please try again."
wait(5)
keyInput.Text = ""
    end
end)

-- Création du bouton de fermeture (X)


-- Fonction pour fermer la Frame
closeButton.MouseButton1Click:Connect(function()
 frame:Destroy() -- Détruire la Frame
    -- Si vous souhaitez également détruire le script, vous pouvez faire :
script:Destroy() -- Décommentez si vous voulez détruire le script
end)

-- Animation de l'agrandissement de la Frame

