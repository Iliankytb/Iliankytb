-- Variables
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local Key = "IliankYTB"

local ButtonName = {
    "name1",
    "name2",
    "name3",
    "name4",
    "name5",
}

local ServicesScrollingFrame = {
    "name1",
    "name2",
    "name3",
    "name4",
    "name5",
}

local ServicesButton = {
    "name1",
    "name2",
    "name3",
    "name4",
    "name5",
}

-- Création du ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HubGui"
screenGui.ResetOnSpawn = false  -- Désactiver le reset sur spawn
screenGui.Parent = playerGui

-- Création de la Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 200) -- Taille de la Frame
frame.Position = UDim2.new(0.5, -100, 0.5, -100) -- Centrée
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Couleur noire
frame.Parent = screenGui

-- Création du premier texte
local titleText = Instance.new("TextLabel")
titleText.Text = "Hub Iliankytb"
titleText.Size = UDim2.new(1, 0, 0, 50)
titleText.Position = UDim2.new(0, 0, 0, 0)
titleText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
titleText.BackgroundTransparency = 1
titleText.TextTransparency = 1 -- Départ avec une transparence de 1
titleText.Parent = frame

-- Création du second texte
local loadingText = Instance.new("TextLabel")
loadingText.Text = "Loading Hub..."
loadingText.Size = UDim2.new(1, 0, 0, 50)
loadingText.Position = UDim2.new(0, 0, 0.5, -25) -- Centré verticalement
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255) -- Couleur blanche
loadingText.BackgroundTransparency = 1
loadingText.TextTransparency = 1 -- Départ avec une transparence de 1
loadingText.Parent = frame

-- Bouton de fermeture
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -40, 0, 10)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.Parent = frame

closeButton.MouseButton1Click:Connect(function()
    frame:Destroy()
    script:Destroy()
end)

-- Animation du texte "Hub Iliankytb"
for i = 1, 75 do
    wait(0.01)
    titleText.TextTransparency = titleText.TextTransparency - 0.01
end

-- Animation du texte "Loading Hub..."
for i = 1, 50 do
    wait(0.01)
    loadingText.TextTransparency = loadingText.TextTransparency - 0.02
end
loadingText:Destroy()

-- Champ de texte pour entrer la clé
local keyInput = Instance.new("TextBox")
keyInput.Size = UDim2.new(1, -20, 0, 50)
keyInput.Position = UDim2.new(0, 10, 0.3, 0)
keyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
keyInput.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
keyInput.PlaceholderText = "Enter Key"
keyInput.TextScaled = true
keyInput.Text = ""
keyInput.Parent = frame

-- Bouton de validation
local submitButton = Instance.new("TextButton")
submitButton.Size = UDim2.new(1, -20, 0, 50)
submitButton.Position = UDim2.new(0, 10, 0.6, 0)
submitButton.Text = "Submit"
submitButton.TextScaled = true
submitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
submitButton.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
submitButton.Parent = frame

submitButton.MouseButton1Click:Connect(function()
    if keyInput.Text == Key then
        print("Key Accepted!")
        keyInput:Destroy()
        submitButton:Destroy()

        for i = 1, 100 do
            wait(0.01)
            frame.Size = UDim2.new(0, 200 + i * 2, 0, 200 + i * 1.1)
        end
        frame.Draggable = true

        -- Frame pour les boutons
        local framebutton = Instance.new("Frame")
        framebutton.Size = UDim2.new(0.5, 0, 0.7, 0)
        framebutton.Position = UDim2.new(0, 0, 0, 0)
        framebutton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        framebutton.BackgroundTransparency = 1
        framebutton.Parent = frame

        local scrollingframebuttons = Instance.new("ScrollingFrame")
        scrollingframebuttons.Size = UDim2.new(1, 0, 1, 0)
        scrollingframebuttons.Position = UDim2.new(0, 0, 0, 0)
        scrollingframebuttons.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        scrollingframebuttons.BackgroundTransparency = 1
        scrollingframebuttons.Parent = framebutton

        -- UIListLayout pour les boutons
        local uiListLayout = Instance.new("UIListLayout")
        uiListLayout.Parent = scrollingframebuttons

        -- Création de plusieurs boutons avec des noms différents
        for B, ButtonName in ipairs(scrollingframebuttons) do
            local button = Instance.new("TextButton")
            button.Size = UDim2.new(1, -10, 0, 50)
            button.Text = B
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
            button.Parent = scrollingframebuttons
        end

        -- Frame pour les services
        local frameService = Instance.new("Frame")
        frameService.Size = UDim2.new(0.5, 0, 0.7, 0)
        frameService.Position = UDim2.new(0.5, 0, 0, 0)
        frameService.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        frameService.BackgroundTransparency = 1
        frameService.Parent = frame

        -- Création de plusieurs ScrollingFrames pour les services
        for N, serviceName in ipairs(ServicesScrollingFrame) do
            local scrollingframeservices = Instance.new("ScrollingFrame")
            scrollingframeservices.Size = UDim2.new(1, 0, 1, 0)
            scrollingframeservices.Position = UDim2.new(0, 0, 0, 0)
            scrollingframeservices.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
            scrollingframeservices.BackgroundTransparency = 1
scrollingframeservices.Name = N
            scrollingframeservices.Parent = frameService

            -- Ajout de boutons dans chaque ScrollingFrame
            local uiListLayoutServices = Instance.new("UIListLayout")
            uiListLayoutServices.Parent = scrollingframeservices

            for j, buttonName in ipairs(ServicesButton) do
                local serviceButton = Instance.new("TextButton")
                serviceButton.Size = UDim2.new(1, -10, 0, 50)
                serviceButton.Text = j
                serviceButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                serviceButton.BackgroundColor3 = Color3.fromRGB(0, 128, 0)
                serviceButton.Parent = scrollingframeservices
            end
        end

    else
        print("Invalid Key. Please try again.")
        keyInput.Text = "Invalid Key. Please try again."
        wait(1.5)
        keyInput.Text = ""
    end
end)
