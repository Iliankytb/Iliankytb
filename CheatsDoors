-- Fonctionnalité ESP
local espActive,FullBrightActive = false
local espTargets = {}
local highlightColor = Color3.fromRGB(255, 255, 255)
local highlightTransparency = 0.25
local highlightColorMonster = Color3.fromRGB(255, 0, 0)
local highlightColorModel = Color3.fromRGB(255, 170, 0)
local highlightTransparencyModel = 0.5

-- Mise à jour des cibles
local function updateEspTargetsModels()
    espTargets = {}
    for _, model in pairs(workspace:GetDescendants()) do
        if model:IsA("Model") or model:IsA("Part") then
            local nameLower = model.Name:lower()
            if nameLower == "locker_large" or nameLower == "door" or nameLower == "gold" or nameLower == "key" then
                table.insert(espTargets, model)
            end
        end
    end
end

-- Fonction pour mettre en surbrillance un modèle
local function highlightModel(model)
    if not model:FindFirstChildOfClass("Highlight") then
        local highlight = Instance.new("Highlight", model)
        highlight.FillColor = highlightColorModel
        highlight.FillTransparency = highlightTransparencyModel
        highlight.OutlineTransparency = highlightTransparencyModel
    end
end

-- Fonction pour surligner tous les modèles dans la table ESP
local function highlightModels()
    for _, model in pairs(espTargets) do
        highlightModel(model)
    end
end

-- Fonction pour effacer les surbrillances
local function clearHighlights()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("Highlight") or obj:IsA("BillboardGui") then
            obj:Destroy()
        end
    end
end

-- Activer/désactiver le ESP
local function Esp()
    espActive = not espActive
    if espActive then
        updateEspTargetsModel()
        highlightModels()
    else
        clearHighlights()
    end
end

-- Ajouter le bouton ESP dans le menu
ESPButton.Mouse1Click:Connect(function()
Esp()
end)

-- Fonction FullBright
local function toggleFullBright()
    FullBrightActive = not FullBrightActive
    if FullBrightActive then
        game.Lighting.Brightness = 2
        game.Lighting.ClockTime = 14
        game.Lighting.FogEnd = 100000
        game.Lighting.GlobalShadows = false
    else
        game.Lighting.Brightness = 1
        game.Lighting.ClockTime = 12
                game.Lighting.FogEnd = 1000
        game.Lighting.GlobalShadows = true
    end
end

-- Ajouter le bouton FullBright dans le menu
createButton("Toggle FullBright", scrollingframeEsp, function()
    toggleFullBright()
end)

-- Fonction pour dupliquer des objets
local function dupeItems()
    for _, item in pairs(player.Backpack:GetChildren()) do
        local clone = item:Clone()
        clone.Parent = player.Backpack
    end
end

-- Ajouter le bouton pour dupliquer des objets
createButton("Dupe Items", scrollingframeDupeItem, function()
    dupeItems()
end)

-- Ajouter le bouton pour afficher la section ESP
createButton("ESP Menu", scrollingFrame, function()
    showSection(scrollingframeEsp)
end)

-- Ajouter le bouton pour afficher la section Player
createButton("Player Menu", scrollingFrame, function()
    showSection(scrollingframePlayer)
end)

-- Ajouter le bouton pour afficher la section Dupe Items
createButton("Dupe Items Menu", scrollingFrame, function()
    showSection(scrollingframeDupeItem)
end)

-- Fonction pour afficher/masquer le menu principal
local menuVisible = false
toggleButton.MouseButton1Click:Connect(function()
    menuVisible = not menuVisible
    frame.Visible = menuVisible
    sidebarFrame.Visible = menuVisible
end)

-- Activer le menu par défaut
frame.Visible = true
sidebarFrame.Visible = true
showSection(scrollingFrame)

